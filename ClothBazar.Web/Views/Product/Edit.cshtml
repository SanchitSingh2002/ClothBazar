@model Product
@{
    ViewBag.Title = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <title>Edit Product</title>
</head>
<body>

    <div class="container mt-4">
        <h2>Edit Product</h2>
        <form id="editProduct">

                <input type="hidden" class="form-control" name="ID" value="@Model.Id">

            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="Name"value="@Model.Name">
            </div>
            <div class="form-group">
                <label>Description</label>
                <input type="text" class="form-control" name="Description" value="@Model.Description">
            </div>

            <div class="form-group">
                <label>Price</label>
                <input type="text" class="form-control" name="Price" value="@Model.Price">
            </div>

            <button id="updateBtn" type="button" class="btn btn-primary">Save</button>
        </form>
    </div>

    <script>
        $("#updateBtn").click(function () {
            $.ajax({
                type: 'POST',
                url: '/Product/Edit',
                data: $("#editProduct").serialize()
            })
                .done(function (response) {
                    $("#tableContainer").html(response);
                    $("#actionContainer").html("");
                })
                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("FAIL");
                });
        });
    </script>

</body>
</html>



